<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:weightSum="2"
    android:padding="8dp">

    <!-- First Card -->
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Meal Image -->
            <ImageView
                android:id="@+id/mealImageCard1"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop" />

            <!-- Heart Icon -->
            <ImageView
                android:id="@+id/heartIconCard1"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:background="@drawable/heart_bg_rounded"
                android:padding="4dp"
                android:src="@drawable/fav"
                android:contentDescription="Favorite" />

            <!-- Meal Name -->
            <TextView
                android:id="@+id/mealNameCard1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mealImageCard1"
                android:layout_marginTop="6dp"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Meal Area -->
            <TextView
                android:id="@+id/mealAreaCard1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mealNameCard1"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>

    <!-- Second Card (Same as first one) -->
    <androidx.cardview.widget.CardView
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_margin="8dp"
        android:layout_weight="1"
        app:cardCornerRadius="12dp"
        app:cardElevation="6dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <!-- Meal Image -->
            <ImageView
                android:id="@+id/mealImageCard2"
                android:layout_width="match_parent"
                android:layout_height="160dp"
                android:scaleType="centerCrop" />

            <!-- Heart Icon -->
            <ImageView
                android:id="@+id/heartIconCard2"
                android:layout_width="28dp"
                android:layout_height="28dp"
                android:layout_alignParentTop="true"
                android:layout_alignParentEnd="true"
                android:layout_margin="8dp"
                android:background="@drawable/heart_bg_rounded"
                android:padding="4dp"
                android:src="@drawable/fav"
                android:contentDescription="Favorite" />

            <!-- Meal Name -->
            <TextView
                android:id="@+id/mealNameCard2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mealImageCard2"
                android:layout_marginTop="6dp"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/black"
                android:textSize="16sp"
                android:textStyle="bold" />

            <!-- Meal Area -->
            <TextView
                android:id="@+id/mealAreaCard2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/mealNameCard2"
                android:layout_marginTop="4dp"
                android:layout_marginStart="8dp"
                android:textColor="@android:color/darker_gray"
                android:textSize="13sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>
